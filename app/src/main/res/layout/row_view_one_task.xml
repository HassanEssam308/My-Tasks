<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15sp"
    android:layout_marginVertical="5dp"
    app:cardElevation="7sp"
    app:cardCornerRadius="12sp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10sp"
        android:paddingVertical="1dp"
        >
        <TextView
            android:id="@+id/RowView_TV_DayString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Wed"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/RowView_TV_DayNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_below="@+id/RowView_TV_DayString"
            android:text="13"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/RowView_TV_Month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RowView_TV_DayNum"
            android:text="Aug"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5sp"

            />

        <View
            android:id="@+id/RowView_V_Line"
            android:layout_marginHorizontal="10sp"
            android:layout_toEndOf="@+id/RowView_TV_DayString"
            android:background="#8C8282"
            android:paddingVertical="10sp"
            android:layout_width="3dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:id="@+id/RowView_LinL_Right"
            android:layout_marginStart="20sp"
            android:layout_toEndOf="@+id/RowView_V_Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/RowView_TV_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5kM Marathon"
                android:textStyle="bold|italic"
                android:textSize="22sp"
                />
            <TextView
                android:id="@+id/RowView_TV_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At nearby staduim"
                android:textSize="22sp"
                />
            <TextView
                android:id="@+id/RowView_TV_Remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aug 31,2022"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="15sp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/RowView_IV_ThreeDote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="3dp"
           />
    </RelativeLayout>



